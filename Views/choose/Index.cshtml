@model IEnumerable<WebApplication1.Models.item>
@{
    ViewBag.Title = "Home Page";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="CodeHim">
    <title>cart</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/foundation/5.0.2/css/foundation.css'>
    <!-- Style CSS -->
    <link rel="stylesheet" href="~/Scripts/stylecart.css">
    <!-- Demo CSS (No need to include it into your project) -->
    <link rel="stylesheet" href="~/Scripts/demo.css">
    <script src="~/Scripts/script.js"></script>

</head>


<body>
    <header class="intro">
    </header>


    <main>

        <h3 style="color:indigo">@Html.ActionLink("->> Click here to edit order", "Index", "carts", new { area = "" }, new { @class = "navbar-brand" })</h3> 


        <div class="row">

            <div class="medium-4  columns">
                <div class="cart">
                    <h1>Cart items</h1>
                    <div class="row">
                        <div class="medium-6 columns">
                            <button class="tiny secondary" id="clear">Clear the cart</button>
                        </div>
                        <div class="medium-6 columns">
                            <button class="tiny" title="Work in progress" onclick="checkout()">Check</button>

                            <div id="return form" style="visibility:visible">
                                <form action="~/choose/sendForm" method='POST'>
                                    <input type="text" class="count" name="name" id="test" />

                                    <input type="radio" id="cash" name="pay" value="cash">
                                    <label for="cash">by cash</label><br>
                                    <input type="radio" id="momo" name="pay" value="momo">
                                    <label for="momo">by momo (083138218)</label><br>
                                    <input type="radio" id="bank" name="pay" value="bank">
                                    <label for="bank">by bank (MB - 012344566- Phạm Hà)</label><br>

                                    <button style="visibility:visible" type="submit"> oke</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div id="cartItems">Loading cart...</div>

                    Total price: <strong id="totalPrice">0 $</strong>
                    <form>

                        <input type="text" placeholder="tên người nhận" id="name">
                        <input type="text" placeholder="số điện thoại" id=phone>

                    </form>



                </div>

            </div>
            <div class="medium-8 columns">
                <h1>Some products</h1>
                <div class="products">





                    @foreach (var item in Model)
                    {
                        <div class="product medium-4 columns" data-name=@Html.DisplayFor(modelItem => item.nameItem) data-price=@Html.DisplayFor(modelItem => item.price   ) data-id=@Html.DisplayFor(modelItem => item.idItem)>

                            <h3>@Html.DisplayFor(modelItem => item.nameItem)</h3>
                            <input type="text" class="count" value="1" />
                            <button class="tiny">Add to cart</button>
                        </div>
                    }



                </div>
            </div>
        </div>




        <script type="text/template" id="cartT">
            <% _.each(items, function (item) { %>
            <div class="panel">
                <h3> <%= item.name %> </h3>  <span class="label">
                    <%= item.count %> piece<% if(item.count > 1)
                    {%>s
                    <%}%> for <%= item.total %>$
                </span>
            </div>
            <% }); %>
        </script>


        <!-- END EDMO HTML (Happy Coding!)-->
    </main>


    <footer class="credit">Author: HaBinh co.,Ltd</footer>

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js'></script>

</body>